    <script src="https://code.jquery.com/jquery-3.6.1.min.js" type="text/javascript"> </script>
    <script type='text/javascript'>
        function hashCode(){
          var hash = 0, i, chr, len;
          if (this.length == 0) return hash;
          for (i = 0, len = this.length; i < len; i++) {
            chr   = this.charCodeAt(i);
            hash  = ((hash << 5) - hash) + chr;
            hash |= 0; // Convert to 32bit integer
          }
          return hash;
        };
        window.onload = function(){
            let chatbot_usernames = [
                "@v1_reflective_learning_bot",
                "@v3_reflective_learning_bot"
            ];
            let followerName = <%-JSON.stringify(followerName) %>;
            let username_idx = hashCode(followerName) % chatbot_usernames.length;

            $("#botuser").text(chatbot_usernames[username_idx])

        }
        function goToTemplate(){

            let data = {
              "leaderName": <%-JSON.stringify(leaderName) %>,
              "followerName": <%-JSON.stringify(followerName) %>,
              "condition": <%= condition %>
            };

            window.location.replace("/template/" + data.condition + "/" + data.followerName +"/de")

        }
    </script>
</head>
